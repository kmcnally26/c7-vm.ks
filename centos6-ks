rootpw  --iscrypted $6$9YiXO2N5dUKyQW9b$HpvyRNJ5XxKVmLzVR7VwNz38b0expBQRPOti7jIXKIQP97Jad4g53bE19ewYAzk87AhvxAoBcbk4LvUSVJC7u0
